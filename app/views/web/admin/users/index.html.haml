- model_class = User
- title model_class.model_name.human.pluralize(:ru), :admin
.page-header
  %h1
    = model_class.model_name.human.pluralize(:ru)
    = link_to t('.new', default: t('helpers.links.new')), new_admin_user_path, class: 'btn btn-primary'
= paginate @users, theme: 'twitter-bootstrap-3'
%table.table.table-condensed.table-hover
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:email)
      %th= t 'helpers.links.actions'
  %tbody
    - @users.each do |user|
      %tr.link{ data: { href: edit_admin_user_path(user) } }
        %td= user.id
        %td= user.email
        %td.actions
          = link_to edit_admin_user_path(user), class: 'btn btn-warning btn-xs' do
            %span.glyphicon.glyphicon-pencil
          = link_to admin_user_path(user), method: :delete, class: 'btn btn-xs btn-danger' do
            %span.glyphicon.glyphicon-remove
= paginate @users, theme: 'twitter-bootstrap-3'
= link_to t('.new', default: t('helpers.links.new')), new_admin_user_path, class: 'btn btn-primary'
