- current_title = page_title(action, Comment.model_name.human)
- title current_title, :admin
.page-header
  %h1= current_title
.row
  .col-lg-12
    = render 'layouts/web/admin/shared/messages', object: @comment_form
.row
  .col-lg-12
    = simple_form_for [:admin, @comment_form], input_html: { class: 'form-horizontal' } do |f|
      = f.input :body, as: :string
      = f.association :user, value_method: :id, label_method: :login
      = f.association :snippet, value_method: :id, label_method: :title
      = f.button :submit, t('helpers.links.save'), class: 'btn-success'
      = link_to t('helpers.links.back'), admin_comments_path, class: 'btn btn-default'
