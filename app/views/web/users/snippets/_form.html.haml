- current_title = page_title(action, Snippet.model_name.human)
- title current_title, :admin
.page-header
  %h1= current_title
.row
  .col-lg-12
    = render 'layouts/web/admin/shared/messages', object: @snippet_form
.row
  .col-lg-12
    = simple_form_for @snippet_form, url: { controller: 'web/users/snippets', action: action }, input_html: { class: 'form-horizontal' } do |f|
      = f.input :title, as: :string
      = f.label :body
      = f.text_field :body
      = f.button :submit, t('helpers.links.save'), class: 'btn-success'
      = link_to t('helpers.links.back'), admin_snippets_path, class: 'btn btn-default'
