- current_title = page_title(action, User.model_name.human)
- title current_title
.page-header
  %h1= current_title
.row
  .col-lg-12
    = render 'layouts/web/admin/shared/messages', object: @user_form
.row
  .col-lg-12
    = simple_form_for @user_form, input_html: { class: 'form-horizontal' } do |f|
      = f.input :email, as: :string, required: true
      = f.input :login, as: :string
      = f.input :password, required: true
      = f.button :submit, t('helpers.links.save'), class: 'btn-success'
      = link_to t('helpers.links.back'), users_path, class: 'btn btn-default'
